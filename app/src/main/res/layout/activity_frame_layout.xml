<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/acivity_horizontal_margin"
android:paddingRight="@dimen/acivity_horizontal_margin"
android:paddingTop="@dimen/acivity_horizontal_margin"
android:paddingBottom="@dimen/acivity_horizontal_margin"
xmlns:android="http://schemas.android.com/apk/res/android">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageView"
    android:src="@drawable/blue"
    android:layout_gravity="left|top"
    />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageView2"
    android:src="@drawable/red"
    android:layout_gravity="left|top"
    android:visibility="gone"/>

</FrameLayout>
